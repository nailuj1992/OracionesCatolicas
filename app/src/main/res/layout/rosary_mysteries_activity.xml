<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prayers.app.activity.rosary.RosaryMysteriesActivity">

    <TextView
        android:id="@+id/title_rosary_mysteries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/margin_top"
        android:text="Mysteries"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_30" />

    <TextView
        android:id="@+id/txt_rosary_mysteries_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_rosary_mysteries"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_right"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/margin_5"
        android:text="Scheduling"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_15" />

    <ScrollView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_buttons"
        android:layout_below="@+id/txt_rosary_mysteries_schedule"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:paddingTop="@dimen/margin_20"
            android:paddingBottom="@dimen/margin_30">

            <TextView
                android:id="@+id/txt_rosary_first_mystery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_20"
                android:text="1. First Mystery"
                android:textSize="@dimen/text_size_22" />

            <TextView
                android:id="@+id/txt_rosary_second_mystery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_rosary_first_mystery"
                android:paddingTop="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_20"
                android:text="2. Second Mystery"
                android:textSize="@dimen/text_size_22" />

            <TextView
                android:id="@+id/txt_rosary_third_mystery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_rosary_second_mystery"
                android:paddingTop="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_20"
                android:text="3. Third Mystery"
                android:textSize="@dimen/text_size_22" />

            <TextView
                android:id="@+id/txt_rosary_fourth_mystery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_rosary_third_mystery"
                android:paddingTop="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_20"
                android:text="4. Fourth Mystery"
                android:textSize="@dimen/text_size_22" />

            <TextView
                android:id="@+id/txt_rosary_fifth_mystery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_rosary_fourth_mystery"
                android:paddingTop="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_20"
                android:text="5. Fifth Mystery"
                android:textSize="@dimen/text_size_22" />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/rosary_mysteries_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.2"
        android:paddingTop="@dimen/margin_50"
        app:srcCompat="@mipmap/lights_wrath_2_vert" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="@dimen/width_close_40"
        android:layout_height="@dimen/height_close_40"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round"
        android:paddingLeft="@dimen/button_padding"
        android:paddingRight="@dimen/button_padding"
        android:text="@string/txt_close"
        android:textColor="@color/colorText"
        android:textSize="@dimen/close_text_size_20" />

    <LinearLayout
        android:id="@+id/nav_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_prev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:paddingLeft="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:text="@string/txt_prev"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:paddingLeft="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:text="@string/txt_pray"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>