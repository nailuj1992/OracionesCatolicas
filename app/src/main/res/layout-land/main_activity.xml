<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prayers.app.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginBottom="@dimen/margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/btn_special_prayers"
                android:layout_width="@dimen/width_200"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/round"
                android:paddingLeft="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:text="@string/title_special_prayers"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size_12" />

            <Button
                android:id="@+id/btn_simple_prayers"
                android:layout_width="@dimen/width_200"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/round"
                android:paddingLeft="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:text="@string/title_simple_prayers"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_180"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_80"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin_2">

                <TextView
                    android:id="@+id/title_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal"
                    android:text="@string/title_welcome"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_25" />

                <TextView
                    android:id="@+id/txt_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="@string/app_description"
                    android:textSize="@dimen/text_size_18" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="@dimen/width_75"
                android:layout_height="@dimen/height_30"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/light"
                android:text="@string/title_settings_short"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size_8" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/home_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_45"
            android:alpha="0.4"
            app:srcCompat="@mipmap/lights_wrath_horiz" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
